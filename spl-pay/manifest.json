{
  "manifest_version": 2,
  "name": "Pay with SPL",
  "description": "This extension allows you to complete fiat payments using your SPL token Solana wallet.",
  "version": "1.0.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.example.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  }
}
